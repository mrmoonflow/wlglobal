





<div class="container">
<div class="row">
    <div class="col-md-30">
      	
      <!-- column 2 -->	
            <a ><strong><i class="glyphicon glyphicon-dashboard"></i> Customers</strong></a> <br/>
<span class="glyphicon glyphicon-plus-sign"></span>  
<%= link_to 'Add New Customer', new_customer_path %>    <br>
    <table class="table table-condensed">
  <thead>
    <tr>
      <th ><%=link_to "ID", {:controller => "customers", :action => "index", :ranking =>"id"}%></th>
        <th><%=link_to "Name", {:controller => "customers", :action => "index", :ranking =>"name"}%></th>
        <th><%=link_to "Status", {:controller => "customers", :action => "index", :ranking =>"status"}%></th>
        <th><%=link_to "Project", {:controller => "customers", :action => "index", :ranking =>"project"}%></th>
        <th><%=link_to "Wechat ID", {:controller => "customers", :action => "index", :ranking =>"wechat"}%></th>
        <th><%=link_to "US Phone", {:controller => "customers", :action => "index", :ranking =>"phone"}%></th>
        <th><%=link_to "CN Phone",{:controller => "customers", :action => "index", :ranking =>"cn_phone"}%></th>
        <th><%=link_to "Personal Email",{:controller => "customers", :action => "index", :ranking =>"email"}%></th>
        <th><%=link_to "Additional Comments",{:controller => "customers", :action => "index", :ranking =>"comments"}%></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%=customer.customer_id%></td>
        <td><%=customer.name%></td>
        <td><%=customer.status%></td>
        <td><%=Project.find(customer.project).name%></td>
        <td><%=customer.wechat%></td>
        <td><%=customer.us_phone%></td>
        <td><%=customer.cn_phone%></td>
        <td><%=customer.email%></td>
        <%if customer.comments.length>15%>
        <td><%=customer.comments[0..15]+"..."%></td>
        <%else%>
        <td><%=customer.comments%></td>
        <%end%>
        <td><%= link_to 'Show', customer %> | <%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
